<div class="wrapper-form">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <div class="form-group">
          <%= form_for(task) do |f| %>
            <%= f.label :description %>
            <%= f.text_field :description, placeholder: "my task", class: "form-control" %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
